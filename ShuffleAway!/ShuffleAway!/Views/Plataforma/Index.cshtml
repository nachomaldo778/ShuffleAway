
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPlataforma.cshtml";
}

<div class="row">
	<div class="col-md-12 text-lg-left">
		<h1>Preparando tu sorteo...</h1>
	</div>
</div>

<section>
	<ul class="nav nav-tabs" id="myTab" role="tablist">
		<li class="nav-item">
			<a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home"
			   aria-selected="true">1. Preparación</a>
		</li>
		<li class="nav-item">
			<a class="nav-link" id="profile-tab" data-toggle="tab" href="#restricciones" role="tab" aria-controls="restricciones"
			   aria-selected="false">2. Restricciones</a>
		</li>
		<li class="nav-item">
			<a class="nav-link" id="contact-tab" data-toggle="tab" href="#entradas" role="tab" aria-controls="entradas"
			   aria-selected="false">3. Entradas</a>
		</li>
		<li class="nav-item">
			<a class="nav-link" id="contact-tab" data-toggle="tab" href="#premio" role="tab" aria-controls="premio"
			   aria-selected="false">4. Premio</a>
		</li>
		<li class="nav-item">
			<a class="nav-link" id="contact-tab" data-toggle="tab" href="#confirmacion" role="tab" aria-controls="confirmacion"
			   aria-selected="false">5. Confirmación</a>
		</li>

	</ul>
	<div class="tab-content" id="myTabContent">

		<div class="tab-pane fade show active mr-tab-content" id="home" role="tabpanel" aria-labelledby="home-tab">
			<div>
				<label>Nombre del sorteo</label>
				<input class="form-control">
				<small class="form-text text-muted">
					Ejemplo: "MiEmpresa: Sorteo notebook Intel"
				</small>
			</div>
			<div class="md-form md-outline">
				<textarea id="form75" class="md-textarea form-control" rows="3"></textarea>
				<label for="form75">Términos y condiciones</label>
			</div>
			<div class="container">
				<div class="col-md-5">
					<div class="form-group">
						<div class="input-append date form_datetime">
							<input size="26" type="text" value="" readonly>
							<span class="add-on"><i class="far fa-calendar-alt"></i></span>
						</div>
					</div>
				</div>
				<div class='col-md-5'>
					<div class="form-group">
						<div class='input-group date' id='datetimepicker7'>
							<input type='text' class="form-control" />
							<span class="input-group-addon">
								<span class="glyphicon glyphicon-calendar"></span>
							</span>
						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="tab-pane fade" id="restricciones" role="tabpanel" aria-labelledby="profile-tab">
			panel RESTRICCIONES
		</div>

		<div class="tab-pane fade" id="entradas" role="tabpanel" aria-labelledby="contact-tab">
			panel ENTRADAS
		</div>

		<div class="tab-pane fade" id="premio" role="tabpanel" aria-labelledby="contact-tab">
			panel PREMIO
		</div>

		<div class="tab-pane fade" id="confirmacion" role="tabpanel" aria-labelledby="contact-tab">
			panel CONFIRMACION
		</div>

	</div>
</section>

