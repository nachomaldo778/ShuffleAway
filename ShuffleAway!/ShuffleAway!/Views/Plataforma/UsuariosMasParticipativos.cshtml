@model ShuffleAway_.Models.MvcModel

@{
	ViewBag.Title = "UsuariosMasParticipativos";
	Layout = "~/Views/Shared/_LayoutPlataforma.cshtml";
}

<div class="content">
	<div class="container-fluid">

		<div class="row">
			<div class="col-md-12 text-lg-left">
				<h3 class="my-4 font-weight-bold">Usuarios más participativos</h3>
			</div>
		</div>

		<div class="container mt-5">
			<div class="row">
                <div class="col-2 text-center" style="left: 30px;">
                    <p class="list-group-item list-group-item-primary text-center blue-gradient" style="color:aliceblue;">Posición</p>
                    <div>
                        <p class="list-group-item list-group-item">1</p>
                    </div>
                    <div>
                        <p class="list-group-item list-group-item">2</p>
                    </div>
                    <div>
                        <p class="list-group-item list-group-item">3</p>
                    </div>
                    <div>
                        <p class="list-group-item list-group-item">4</p>
                    </div>
                    <div>
                        <p class="list-group-item list-group-item">5</p>
                    </div>
                    <div>
                        <p class="list-group-item list-group-item">6</p>
                    </div>
                    <div>
                        <p class="list-group-item list-group-item">7</p>
                    </div>
                    <div>
                        <p class="list-group-item list-group-item">8</p>
                    </div>
                    <div>
                        <p class="list-group-item list-group-item">9</p>
                    </div>
                    <div>
                        <p class="list-group-item list-group-item">10</p>
                    </div>
                </div>
				<div class="col-5 text-center">
					<p class="list-group-item list-group-item-primary text-center blue-gradient" style="color:aliceblue;">Nombre de usuario</p>
					@foreach (var item in Model.lstInscripciones)
					{
						<p class="list-group-item list-group-item">@item.nombreUsuario</p>
					}
				</div>
				<div class="col-3 text-center" style="right: 30px">
					<p class="list-group-item list-group-item-primary text-center blue-gradient" style="color:aliceblue;">Veces que participó</p>
					@foreach (var item in Model.lstInscripciones)
					{
						<p class="list-group-item list-group-item">@item.cantidadInscripciones</p>
					}
				</div>
			</div>
		</div>
	</div>
</div>

