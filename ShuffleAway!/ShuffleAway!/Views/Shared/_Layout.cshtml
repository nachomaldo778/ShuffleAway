				</li>
				<li class="list-inline-item">
					<a href="@Url.Action("PlanPrecios", "Home")" class="btn rounded blue-gradient">Comenzar <i class="fas fa-sign-in ml-1"></i></a>
				</li>
			</ul>
			<!-- Call to action -->

			<hr>

			<!-- Social buttons -->
			<ul class="list-unstyled list-inline text-center">
